{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020"],
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,

        /* Bundler mode */
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "build",

        /* Linting */
        "strict": true,
    },
    "include": ["src"]
}
